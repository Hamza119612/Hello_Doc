{% extends 'base.html.twig' %}

{% block title %}Medcin index{% endblock %}


{% block body %}
{% include "inc/navigation.html.twig" %}

<div class="searchbar">
  <div class="main-form-container">
    <form id="" class="" method="post">
      <input class="myinputclass" type="text" class="main-input main-name" name="NAME" value="Search by name" onfocus="clearText(this)"
        onblur="replaceText(this)" /><input type="text" class="myinputclass main-input main-location" name="LOCATION"
        value="Search by city or postal code" onfocus="clearText(this)" onblur="replaceText(this)" /><button
        type="button" class="main-btn">
        <p class="search-small">SEARCH BY</p>
        <p class="search-large">Name</p>
      </button>
      <ul class="search-description">
        <li>By Location</li>
        <li>By Name</li>
      </ul>
      <input id="main-submit" class="" type="submit" value="Search" />
    </form>

    <button type="button" id="main-submit-mobile">Search</button>

  </div>
</div>


<div>
<h1>List Des Medcin</h1>

<table class="table">
  <thead>

    <tr>
  
      <th>Nom </th>
      <th>Prenom</th>
      <th>Prix visite</th>
      <th>Addresse </th>
      <th>actions</th>
    </tr>
  </thead>
  <tbody>

    {% for medcin in medcin %}

    <tr>
      <td>{{ medcin.nom }}</td>
      <td>{{ medcin.prenom }}</td>
      <td>{{ medcin.prix_visite }}</td>
      <td>{{ medcin.cabinet_add }}</td>
      <td>
        {# <a href="{{ path('medcin_show', {'id': medcin.id}) }}">Prendre RDV</a> #}
        <a href="{{ path('rendezvous_new' , {'id': medcin.id }) }}">Prendre RDV </a>
      </td>
    </tr>
    {% else %}
    <tr>
      <td colspan="7">no records found</td>
    </tr>
    {% endfor %}
  </tbody>
</table>

{# <a href="{{ path('completer_profil') }}">Create new</a> #}
</div>


   
{% endblock %}